{
    "name": "mahal",
    "displayName": "mahal",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onLanguage:mahal"
    ],
    "scripts": {
        "build": "cd language_service && npm run build"
    },
    "main": "language_service/dist/client.js",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "mahal.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
                "off",
                "messages",
                "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server."
        },
        "snippets": [
            {
                "language": "mahal",
                "path": "./snippets/snippets.json"
            }
        ],
        "languages": [
            {
                "id": "mahal",
                "aliases": [
                    "Mahal",
                    "mahal"
                ],
                "extensions": [
                    ".mhl",
                    ".mahal"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mahal",
                "scopeName": "source.mhl",
                "path": "./syntaxes/mahal.tmLanguage.json"
            }
        ]
    }
}
